<div class="container-fluid">
	<div class="row-fluid">
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center"> 
			<%= form_for(@micropost) do |f| %>
			  <%= render 'shared/error_messages', object: f.object %>

			  <%= f.label :description, "Describe the Goal:" %>
			  <%= f.text_area :description, class: 'form-control' %>
			  <br>

			  <%= f.label :measurement, "Measure the Goal:" %>
			  <%= f.text_area :measurement, class: 'form-control' %>
			  <br>

			  <%= f.label :achieved_by, "Achieved By: " %>
			  <%= f.date_select :achieved_by %>
			  
			  <div class="container-fluid">
			  	<div class="row-fluid">
			  		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center"> 
			  			<%= f.submit "Submit Goal", class: "btn btn-success" %>
			  		</div>
			  	</div>
			  </div>
			<% end %>
		</div>
	</div>
</div>