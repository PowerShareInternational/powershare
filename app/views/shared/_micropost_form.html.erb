<div class="container-fluid newGoalSection">
	<div class="row-fluid">
		<div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center"> 
			<%= form_for(@micropost) do |f| %>
			  <%= render 'shared/error_messages', object: f.object %>

			  <%= f.label :description, "Describe the Goal:", class: "formLabel" %>
			  <%= f.text_area :description, class: 'form-control formBox' %>  

			  <%= f.label :measurement, "Measure the Goal:", class: "formLabel" %>
			  <%= f.text_area :measurement, class: 'form-control formBox' %>

			  <%= f.label :achieved_by, "Achieved By: ", class: "formLabel" %>
			  <br>
			  <%= f.date_select :achieved_by %>
			  <br>
			</div>
		</div>

	<div class="row-fluid">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center"> 
			<br>
			<%= f.submit "Submit Goal", class: "btn btn-primary submitButton" %>
			<br>
		</div>
	</div>
		<% end %>
</div>