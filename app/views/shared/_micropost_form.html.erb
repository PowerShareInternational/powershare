<div class="container-fluid newGoalSection">
	<div class="row-fluid">
		<div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center">
			<% flash.each do |message_type, message| %>
				<br>
      	<div class="alert alert-<%= message_type %> text-center" id="newGoalError"><%= message %></div>
    	<% end %>
    	
			<%= form_for(@micropost) do |f| %>
			  <%= render 'shared/error_messages', object: f.object %>

			  <h3><%= f.label :description, "Describe the Goal:" %></h3>
			  <%= f.text_area :description, class: 'form-control' %>  

			  <h3><%= f.label :measurement, "Measure the Goal:" %></h3>
			  <%= f.text_area :measurement, class: "form-control" %>

			  <h3><%= f.label :achieved_by, "Achieved By:" %></h3>
			  <p><%= f.date_select :achieved_by %></p>
			</div>
		</div>

	<div class="row-fluid">
		<div class="col-xs-6 col-sm-4 col-md-4 col-lg-4 col-xs-offset-3 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
			<br> 
			<%= f.submit "Submit Goal", id: "submitGoal", class: "form-control btn btn-success btn-login" %>
		</div>
	</div>
		<% end %>
</div>