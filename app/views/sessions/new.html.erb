<% provide(:title, "Log in") %>
<section id="loginSection">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center"> 
        <h1 id="loginText">Log in to your Community</h1>
        <%= form_for(:session, url: login_path) do |f| %>

          <div id="loginSlot">
            <%= f.label :email, class: "loginLabel" %>
            <%= f.email_field :email, class: 'form-control loginForm' %>

            <%= f.label :password, class: "loginLabel" %>
            <%= f.password_field :password, class: 'form-control loginForm' %>

            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span id="rememberMeText">Remember me on this device</span>
            <% end %>

            <%= f.submit "Log in", class: "btn btn-success", id: "loginButton" %>
          <% end %>

          <p id="newUserText">New user? <span id="signupText"><%= link_to "Sign up now!", signup_path %></span></p>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "shared/aboutSection" %>

<%= render "shared/contactSection" %>
