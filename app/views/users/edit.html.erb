<% provide(:title, 'Edit account') %>
<% provide(:button_text, 'Save changes') %>
<div class="container-fluid" id="updateAccountWrapper">
	<div class="row-fluid">
  		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center"> 
    		<h1 class="formHeader">Update your profile</h1>
	    	<%= form_for(@user) do |f| %>
			  	<%= render 'shared/error_messages', object: f.object %>
			  	<%= f.label :first_name, class: 'formLabel' %>
			  	<%= f.text_field :first_name, class: 'form-control' %>

			  	<%= f.label :middle_name, class: 'formLabel' %>
			  	<%= f.text_field :middle_name, class: 'form-control' %>

			  	<%= f.label :last_name, class: 'formLabel' %>
			  	<%= f.text_field :last_name, class: 'form-control' %>

			  	<%= f.label :address, class: 'formLabel' %>
			  	<%= f.text_field :address, class: 'form-control' %>

			  	<%= f.label :zip, class: 'formLabel' %>
			  	<%= f.text_field :zip, class: 'form-control' %>

			  	<%= f.label :email, class: 'formLabel' %>
			  	<%= f.email_field :email, class: 'form-control' %>

			  	<%= f.label :password, class: 'formLabel' %>
			  	<%= f.password_field :password, class: 'form-control' %>

			  	<%= f.label :password_confirmation, class: 'formLabel' %>
			  	<%= f.password_field :password_confirmation, class: 'form-control' %>

			  	<%= f.submit "Update my account", class: "btn btn-primary", id: "submitFormButton" %>
			<% end %>
  		</div>
	</div>
</div>