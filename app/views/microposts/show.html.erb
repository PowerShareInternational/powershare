<% provide(:title, "View Goal") %>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center"> 
			<h3><%= @micropost.content %></h3>
			<h4><%= @micropost.votes%> votes</h4>
			<% if @micropost.achieved == true %>
				<h4 class="achievedText">Achieved!</h4>
			<% end %>
			<hr>
			<% if current_user.official == false %>
				<h3>Representative Comments:</h3>
				<% if @micropost.responses.any? %>
					<% @micropost.responses.each do |response| %>
						<br>
						<h4><%= response %></h4>
					<% end %>
					<br>
				<% else %>
					<h4 class="text-muted"><em>There are no comments at this time</em></h4>
					<br>
				<% end %>
			<% elsif current_user.official == true %>
				<h4>Write a Response to This Goal.</h4>
				<br>
				<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center">
					<%= label_tag "Comment:", nil, class: "newGoalLabel" %>
				  <%= text_area_tag 'newResponse', nil, class: 'form-control' %>
				  <br>
				  <%= button_tag "Submit Response", class: "btn btn-primary btn-success", id: "submitPriorityButton",  data: { confirm: "Are you sure you'd like to provide this response?" } %>
				  <br>
				  <br>
				</div>
			<% end %>
		</div>
	</div>
</div>