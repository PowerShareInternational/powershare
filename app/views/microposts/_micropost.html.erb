<tr>
	<td><label>
		<%= radio_button_tag "selectable_goal", micropost.content %>
		<i class="fa fa-check fa-2x"></i>
		<span><%= "(submitted "+time_ago_in_words(micropost.created_at)+" ago) "+micropost.content %></span>
	</label></td>
	<td><span><%= micropost.votes %></span></td>
	<% if micropost.achieved %>
		<td><span>Achieved!</span></td>
	<% else %>
		<td><span></span></td>
	<% end %>
</tr>